@model TatBlog.WebApp.Areas.admin.Models.PostEditModel

@{
	ViewData["PageTitle"]= "Thêm/ Cập nhật bài viết";
}

<h1> Thêm/Cập nhật bài viết </h1>

<form asp-area"Admin"
		asp-controller="Posts"
		asp-action="Edit"
		enctype="multipart/form-data"
		method="post">
	<div asp-validation-summary="ModelOnly"></div>
	<input type ="hidden" asp-for="Id" />	

	<div class="row mb-3">
		<label asp-for="Title"
			class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input type="text" class="form-control" asp-for="Title">
			<span asp-validation-for="Title"
				class="text-danger"></span>	
		</div>
	</div>
		<div class="row mb-3">
		<label asp-for="UrlSlug"
			class="col-sm-2 col-form-label"></label>      
		<div class="col-sm-10">
			<input type="text" class="form-control" asp-for="UrlSlug">
			<span asp-validation-for="UrlSlug"
				class="text-danger"></span>	
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="ShortDescription"
			class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input type="text" class="form-control" asp-for="ShortDescription">
			<span asp-validation-for="ShortDescription"
				class="text-danger"></span>	
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="Description"
			class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input type="text" class="form-control" asp-for="Description">
			<span asp-validation-for="Description"
				class="text-danger"></span>	
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="Meta"
			class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input type="text" class="form-control" asp-for="Meta">
			<span asp-validation-for="Meta"
				class="text-danger"></span>	
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="AuthorID"
			class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<select class="form-control" asp-for="AuthorID"
					asp-items="Model.AuthorList">
				<option value="">-- Chon tác giả --</option>
			</select>
			<span asp-validation-for="AuthorID"
				class="text-danger"></span>	
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="CategoryId"
			class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<select class="form-control" asp-for="CategoryId"
					asp-items="Model.CategoryList">
				<option value="">-- Chon chủ đề --</option>
			</select>
			<span asp-validation-for="CategoryId"
				class="text-danger"></span>	
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="SelectedTags"
			class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<textarea class="form-control" 
					asp-for="SelectedTags"
					rows="5"></textarea>
			<span asp-validation-for="SelectedTags"
				class="text-danger"></span>	
		</div>
	</div>
	@if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
	{
	<div class="row mb-3">
		<label asp-for="ImageUrl"
					class=col-sm-2 col-form-label></label>
		<div class="col-sm-10">
			<img src="/@Model.ImageUrl"/>
		</div>
	</div>
	}
	<div class="row mb-3">
		<label asp-for="ImageFile"
					class=col-sm-2 col-form-label></label>
		<div class="col-sm-10">
			<img src="/@Model.ImageFile"/>
		</div>
	</div>
	<div class=row-mb-3>
		<div class="col-sm-10 offset-sm-2">
			<div class="form-check">
				<input class="form-check-input"
						type="checkbox"
						asp-for="Published">
				<label class="form-check-label"
						asp-for="Published"></label>
			</div>
		</div>
	</div>
	<div class="text-center">
		<button type="submit" class= btn btn-primary >
			Lưu các thay đổi
		</button>

		<a asp-area="Admin"
			asp-controller="Posts"
			asp-action="Index"
			class="btn btn-danger">
				Hủy & Quay lại
		</a>
	</div>
</form>
@section scripts{
	<partial name="_ValidationScriptsPartial"></partial>

	<script src="~/lib/speakingurl/speakingurl.min.js"></script>
	<script>
		$(function(){
			$('#Title').change(function(){
				var slug = getSlug(this.value);
				$('#UrlSlug').val(slug).trigger('blur');
			})
		})
	</script>
}                      