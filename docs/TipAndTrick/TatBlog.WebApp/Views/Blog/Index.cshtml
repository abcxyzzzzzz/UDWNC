@model IPagedList<Post>

@{
    ViewData["PageTitle"] = "Trang chủ";
    var postQuyery = (ViewBag.PostQuyery as PostQuery) ?? new PostQuery();
}
<div class ="p-4">
    @if (!string.IsNullOrWhiteSpace(postQuyery.Keyword))
    {
        <h3 class ="text-primary mb-3">
            Nhung bai viet chua tu khoa '@postQuyery.Keyword'
        </h3>
    }
    @foreach (var postItem in Model)
    {
        <partial name ="_PostList" model = "postItem"/>
    }
    <partial name ="_Pager" model="@Model"/>
</div>

